{{#em-form model=model showErrorsOnRender=false}}
    {{em-input property="name" label="Full Name" placeholder="Enter a name..."}}
    {{em-input property="password" label="Password" placeholder="And password..." type="password" disabled=model.nameHasValue}}
    {{em-text property="comment" label="Comment" placeholder="Comment please.." rows=4}}
    {{em-select property="gender" label="Gender" prompt="-select-" content=genderOptions optionValuePath="id" optionLabelPath="name"}}
    {{em-checkbox property="active" label="Active?"}}
{{/em-form}}
